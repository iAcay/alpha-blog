<div class="container">
  <div class="row justify-content-md-center">
    <div class="card text-light mb-4", id="cards_body">
      <div class="card-header bg-dark mt-3">
        <h1 class="text-center"><%= @user.username %>'s profile</h1>
      </div>
      <div class="card-body text-end">
        <h5 class="card-title"><%= gravatar_for @user, size: 150 %></h5>
        <% if logged_in? && @user == current_user %>
          <%= link_to 'Edit your profile', edit_user_path(@user), class: 'btn btn-outline-light btn-sm'%>
        <% end %>
      </div>
      <div class="card-header bg-dark mb-3">
        <p class="card-text"><h3 class="text-center">Articles:</h3></p>
      </div>
    </div>
    
    <div class="flickr_pagination">
      <%= will_paginate @articles, :container => false %>
    </div>
    
    <%= render 'articles/article' %>
    
    <div class="flickr_pagination mb-3">
      <%= will_paginate @articles, :container => false %>
    </div>
  </div>
</div>