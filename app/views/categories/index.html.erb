<h1 class="text-center text-light">Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

  <div class="container">
    <% @categories.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-6 mt-4">
          <div class="card text-white text-center shadow-lg mb-3 bg-dark rounded">
            <div class="card-header fst-italic"></div>
            <div class="card-body", id="cards_body">
              <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-white", style: "text-decoration: none" %></h5>
              <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(category.created_at) %> ago,
              edited <%= time_ago_in_words(category.updated_at) %> ago.</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<div class="flickr_pagination mb-3">
  <%= will_paginate @categories, :container => false %>
</div>