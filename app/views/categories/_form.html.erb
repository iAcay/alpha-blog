<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "shadow-lg p-3 mb-3 rounded", id: "forms", local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter a name", id: "text_field" %>
    </div>
  </div>
  </p>
  <p class="text-center">
    <%= link_to 'Cancel', :back, class: 'btn btn-outline-light btn-lg' %>
    <%= f.submit class: "btn btn-light btn-lg" %>
  </p>
<% end %>